<Window x:Class="TheLittleBookNest.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="pack://application:,,,/Assets/bookicon.ico"
        Title="The Little BookNest" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" Background="#2F4F4F"
        PreviewKeyDown="MainWindow_PreviewKeyDown">
       

    <Grid>
        <!-- Layout Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- Banner and Title -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Menu -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Top Section with Banner and Title -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#B3A290">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Banner -->
            <Image Source="/Assets/transparent_banner.png" Stretch="Uniform" Grid.Column="0" Margin="267,8,506,8" Grid.ColumnSpan="2" />

            <!-- Title -->
            <TextBlock Text="The Little BookNest"
                       FontSize="48"
                       Foreground="#FF3C220E"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Bodoni MT"
                       FontWeight="Bold" Grid.ColumnSpan="2" Margin="680,0,0,0" />
        </Grid>

        <!-- Side Menu -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#FFD4CAB9" Margin="5,10,5,5">
            <TextBlock Text="Menu" FontSize="20" FontWeight="Bold" Margin="10,10,10,20" />
            <Button Content="Books" Command="{Binding NavigateToBooksCommand}" Margin="10" Height="40" FontSize="16" />
            <Button Content="Authors" Command="{Binding NavigateToAuthorsCommand}" Margin="10" Height="40" FontSize="16" />
            <Button Content="Stores" Command="{Binding NavigateToStoresCommand}" Margin="10" Height="40" FontSize="16" />
        </StackPanel>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Grid.Column="1" Background="#FFFFFF" Margin="10" CornerRadius="8" BorderThickness="2" BorderBrush="#B3A290">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>

</Window>


