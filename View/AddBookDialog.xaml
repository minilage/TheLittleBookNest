<Window
    x:Class="TheLittleBookNest.View.AddBookDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TheLittleBookNest.Converters"
    Title="Add Book"
    Width="400"
    Height="650"
    Background="{DynamicResource DialogBackground}"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:DecimalToStringConverter x:Key="DecimalToStringConverter" />
    </Window.Resources>

    <Window.InputBindings>
        <!--  Bind Enter-tangenten till SaveCommand  -->
        <KeyBinding Key="Enter" Command="{Binding SaveCommand}" />
        <!--  Bind ESC-tangenten till CloseCommand  -->
        <KeyBinding Key="Escape" Command="{Binding CloseCommand}" />
    </Window.InputBindings>

    <Grid Margin="15">
        <StackPanel>
            <!--  Rubrik  -->
            <TextBlock
                Margin="0,10,0,30"
                HorizontalAlignment="Center"
                Style="{StaticResource HeadingTextStyle}"
                Text="Add a New Book" />

            <!--  PopUp  -->
            <TextBlock
                Width="347"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="ISBN13" />
            <TextBox
                Width="350"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding ISBN13, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Width="346"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Title" />
            <TextBox
                Width="350"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Width="346"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Author" />
            <ComboBox
                Width="350"
                DisplayMemberPath="FullName"
                ItemsSource="{Binding Authors}"
                SelectedItem="{Binding SelectedAuthor}"
                Style="{StaticResource ComboBoxStyle}" />

            <TextBlock
                Width="346"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Book Format" />
            <ComboBox
                Width="350"
                ItemsSource="{Binding BookFormats}"
                SelectedItem="{Binding SelectedBookFormat}"
                Style="{StaticResource ComboBoxStyle}" />

            <TextBlock
                Width="348"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Price" />
            <TextBox
                Width="350"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Price, Converter={StaticResource DecimalToStringConverter}, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock
                Width="347"
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="Language" />
            <TextBox
                Width="350"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Language, UpdateSourceTrigger=PropertyChanged}" />


            <!--  Spara och Avbryt  -->
            <StackPanel
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Name="SaveButton"
                    Width="120"
                    Height="40"
                    Margin="10,0,10,0"
                    Command="{Binding SaveCommand}"
                    Content="Save"
                    Style="{StaticResource PrimaryButtonStyle}" />
                <Button
                    Name="CancelButton"
                    Width="120"
                    Height="40"
                    Margin="10,0,10,0"
                    Command="{Binding CloseCommand}"
                    Content="Cancel"
                    Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
